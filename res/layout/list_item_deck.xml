<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@color/gray" >

    <LinearLayout
        android:id="@+id/list_item_deck_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.magicallinone.app.views.BebasNeueTextView
            android:id="@+id/list_item_deck_format"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.magicallinone.app.views.BebasNeueTextView
            android:id="@+id/list_item_deck_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
    
    
    <FrameLayout
        android:id="@+id/list_item_deck_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/list_item_deck_buttons"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/list_item_deck_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:ignore="contentDescription" />
    </FrameLayout>

    <com.magicallinone.app.views.BebasNeueTextView
        android:id="@+id/list_item_deck_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_deck_image_layout"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.magicallinone.app.views.BebasNeueTextView
        android:id="@+id/list_item_deck_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_deck_title"
        android:layout_toRightOf="@id/list_item_deck_image_layout"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/eighty_percent_gray"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/dialog_fragment_card_details_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:paddingTop="10dp" />

    <View
        android:id="@+id/dialog_fragment_card_details_seperator"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/dialog_fragment_card_details_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_minus_icon"
            android:padding="5dp" />

        <View
            android:layout_width="40dp"
            android:layout_height="50dp" />

        <ImageButton
            android:id="@+id/dialog_fragment_card_details_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_plus_icon"
            android:padding="5dp" />
    </LinearLayout>

</LinearLayout>